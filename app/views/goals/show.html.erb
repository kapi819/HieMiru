<% content_for( :title, t('.title'))%>
<div class="container">
  <div class="top-wrapper">
    <div class="col-md-10 col-lg-8 mx-auto">
      <div class="box">
        <div class="white-box center">
          <h6>あなたの目標</h6>
          <h4><%= @goal.goal_body %></h4>
          <div id="progress-container-wrapper">
            <div id="progress-container">
              <canvas id="progress-canvas" width="400" height="400"></canvas>
              <div id="progress-text">
                <p><%= @goal.count %>/7</p>
              </div>
              <button id="record-button" data-goal-id="<%= @goal.id %>">今日の記録</button>
            </div>
          </div>
          <div id="comment-container"></div>
        </div>
      </div>
      <div class="box">
        <div class="white-box center">
          <h6>あなたの設定した目標</h6>
          <h3><%= @goal.goal_body %></h3>
          <%= link_to '変更', edit_goal_path(@goal), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
