<%= form_with model: goal, url: goals_path, method: :post do |f| %>
  <%= f.label :goal_body, "目標を設定して下さい" %>
  <%= f.text_area :goal_body, class: "form-control mb-3", row: "4", placeholder: current_user.cold_symptoms.first&.solution.to_s %>
  <%= f.submit "送信", class: "btn btn-primary" %>
<% end %>
