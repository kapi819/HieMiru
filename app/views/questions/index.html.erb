      <div class="container mx-auto text-center">
        <%= form_with url:"#", scope: :answer, method: :post, data: { turbo: false } do |f| %>
          <% @questions.each_with_index do |question, index| %>
            <div id="question_<%= index+1 %>">
              <h2 class="text-center">Q<%=index+1%></h2>
              <div class="container mx-auto">
                <p class=""><%= question.question_title %></p>
                <div class="flex flex-col">
                  <% question.choices.each do |choice| %>
                    <%= f.radio_button "answers[#{question.id}]", choice.id, id: "answer_#{question.id}_#{choice.id}", class:'hidden radio', data: { question_id: index + 1 } %>
                    <%= f.label "answer_#{question.id}_#{choice.id}", choice.question_body, class: '' %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
          <button type="button" data-action="previous-question" id="previous_button" class="hidden">戻る</button>
          <button type="button" data-action="next-question" id="next_button" class="hidden">次へ</button>
          <%= f.submit "結果", id: "submit-button", class: 'hidden'>
        <% end %>
      </div>
    <!--</div>-->
  </div>
</div>
