<% content_for( :title, t('.title'))%>
<div class="container">
  <div class="top-wrapper">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h3><%= t('.title') %></h3>
        <div class="white-box text-start">
          <% cold_symptom = ColdSymptom.find_by(symptom_type: @diagnosis) %>
          <p class="text-decoration-underline fw-bold"><%= @cold_symptom.localized_symptom_type %></p>
          <p>あなたは、</p>
          <p><%= @cold_symptom.symptom_title %></p>
          <p><%= @cold_symptom.symptom_body %></p>
          <%= image_tag @cold_symptom.image_url, style: 'max-height: 300px; width: auto;' %><br>
        </div>
      <div class="row justify-content-center align-items-center">
        <div class="col-auto">
          <%= link_to 'もう１度診断する', questions_path, class: 'btn btn-share' %>
        </div>
        <div class="twitter col-auto">
          <%= link_to "https://x.com/share?url=https://portfolio-2-xm41.onrender.com&text=【あなたはどんな冷え性？】%0a%0a#{ @cold_symptom.symptom_title}%0a%0a %23HieMiru %23冷え性", target: '_blank', class: 'btn btn-share' do %>
            <i class="fa-brands fa-x-twitter"></i>シェア
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
